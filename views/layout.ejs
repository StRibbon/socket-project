<% include partials/headerlayout %>

<form id="login" method="POST" action="javascript:void(0)">
  <div class="form-group"> 
    <h2>Log-in</h2>
    <label for="username">Username:</label>
          <input type="text" id="username" placeholder="Enter username" autofocus class="form-control">
    </label>
    <label>Password:
      <input type="password" id="password" placeholder="Input your password" class="form-control">
    </label>
    <input type="submit" class="btn btn-primary" value="submit">
  </div>   
  
  <div>
    <a href="/signup">Don't have an account? Register here</a>
  </div>
  
</form>

<div id="map-canvas" style="display:none;"></div>

<form class="form-group" id="message" action="javascript:void(0)" style="display:none;" :focus >
      <label for="message" class="message-label"><strong>Type a Message & Press Enter:</strong></label>
      <input type="text" name="message[body]" id="text" class="form-control">
      <input type="hidden" name="message[user]">
      <input type="submit" value="SEND" style="display:none;">
</form>

<div id="messages" style="display:none;"></div>
<div id="logout" style="display:none;"></div>

<% include partials/footer %>